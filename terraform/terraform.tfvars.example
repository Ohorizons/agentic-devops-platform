# --- REQUIRED -----------------------------------------------------------------

customer_name         = "contoso"           # Your company/project name (lowercase)
environment           = "dev"               # dev | staging | prod
location              = "brazilsouth"       # Azure region
azure_subscription_id = ""                  # az account show --query id -o tsv
azure_tenant_id       = ""                  # az account show --query tenantId -o tsv
admin_group_id        = ""                  # Azure AD group for admins
github_org            = ""                  # GitHub organization name
domain_name           = "internal.local"    # Base domain for platform services

# --- DEPLOYMENT MODE ----------------------------------------------------------
# express   = Minimal (dev/testing, ~$50-100/month)
# standard  = Production-ready (HA, monitoring, ~$500-1000/month)
# enterprise = Full HA + multi-zone + DR (~$3000+/month)

deployment_mode = "express"

# --- H1 FOUNDATION (always deployed: networking, aks, security) ---------------

enable_container_registry = true
enable_databases          = true
enable_defender            = false
enable_purview             = false

# --- H2 ENHANCEMENT -----------------------------------------------------------

enable_argocd           = true
enable_external_secrets  = true
enable_observability     = true
enable_github_runners    = false
enable_cost_management   = false

# --- H3 INNOVATION ------------------------------------------------------------

enable_ai_foundry   = false
ai_foundry_location = "eastus2"    # Best model availability

# --- CROSS-CUTTING ------------------------------------------------------------

enable_disaster_recovery = false
dr_location              = "eastus2"

# --- COST ALERTS (when enable_cost_management = true) -------------------------

budget_amount = 5000
alert_emails  = []

# --- TAGS ---------------------------------------------------------------------

tags = {
  Project   = "three-horizons"
  ManagedBy = "terraform"
}